<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.vladislavsumin.camviewer.gui.PlayerWindowController">
    <children>
        <AnchorPane fx:id="player" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="52.0"
                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
        <AnchorPane prefHeight="50.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0">
            <children>
                <Slider fx:id="slider" prefHeight="25.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0"
                        AnchorPane.topAnchor="0.0"/>
                <BorderPane prefHeight="28.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0"
                            AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                    <center>
                        <Button mnemonicParsing="false" onMouseClicked="#pause" text="Play/Pause"
                                BorderPane.alignment="CENTER"/>
                    </center>
                    <padding>
                        <Insets bottom="0.5" left="0.5" right="0.5" top="0.5"/>
                    </padding>
                </BorderPane>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
